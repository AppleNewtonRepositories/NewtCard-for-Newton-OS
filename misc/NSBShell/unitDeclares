DeclareUnit('|editorUnit:NSBASIC|, 1, 0, {editorUnit:	0});DeclareUnit('|programUnit:NSBASIC|, 1, 0, {programUnit:	0});DeclareUnit('|interpreterUnit:NSBASIC|, 1, 0, {interpreterUnit:	0});DeclareUnit('|executorUnit:NSBASIC|, 1, 0, {executorUnit:	0});DeclareUnit('|commsUnit:NSBASIC|, 1, 0, {commsUnit:	0, BITUnit: 1});DeclareUnit('|visualDesignerUnit:NSBASIC|, 1, 0, {visualDesignerUnit:	0});// warn user that we can't work without editorSetPartFrameSlot('RemovalApproval, func(unitName, major, minor)  begin "This operation will also disable NS BASIC." end);  // when editor is gone, we close up shopSetPartFrameSlot('ImportDisabled, func(unitName, major, minor)  begin GetRoot().(kAppSymbol):Close();  end);